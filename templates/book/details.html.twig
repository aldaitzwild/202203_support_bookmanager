{% extends "base.html.twig" %}

{% block title %}Détails de {{book.title}} {% endblock %}

{% block body %}
    <main class="container">
        <div class="row">
            <h1 class="text-center mb-5">{{ book.title }}</h1>
        </div>

        <input type="hidden" id="bookId" value="{{ book.id }}">

        <div class="row">
            <h2 class="col-2">Description : </h2>
            <button class="btn btn-primary col-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                Voir description
            </button>

            <button class="btn btn-warning col-2" type="button" id="borrow_btn">
                Emprunter
            </button>
            

            <div class="collapse" id="collapseExample">
                <p class="col-12 border rounded m-3 p-3">{{ book.description }}</p>
            </div>
        </div>

        <hr class="m-5">

        <h2>Details : </h2>
        <ul>
            <li>Nombre de pages : {{book.nbOfPages}}</li>
            <li>Auteur : {{ book.author.firstname }} {{ book.author.lastname }}</li>
        </ul>


        {% if movie is not empty %}
        
            <hr class="m-5">

            <h2>Film : {{ movie.Title }}</h2>
            <div class="row">
                <img class="col-4 img-fluid" src="{{ movie.Poster }}">
                <div class="col-8">
                    <ul>
                        <li>Titre : {{ movie.Title }}</li>
                        <li>Année : {{ movie.Year }}</li>
                        <li>Réalisateur : {{ movie.Director }}</li>
                    </ul>
                </div>
            </div>

        {% endif %}

        <hr class="m-5">

        <table class="table">
            <thead>
                <tr>
                    <th>Numéro</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                {% for chapter in book.chapters %}
                    <tr>
                        <td>{{ chapter.number }}</td>
                        <td>{{ chapter.description }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}