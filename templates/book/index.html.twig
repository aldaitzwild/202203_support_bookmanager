{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
<h1 class="text-center">Liste des livres</h1>    

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Nb de pages</th>
                <th>Auteur</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td><a href="/book/{{ book.id }}">{{ book.title }}</a></td>
                    <td>{{ book.nbOfPages }}</td>
                    <td>{{ book.author.firstname }} {{ book.author.lastname }}</td>
                </tr>
            {% endfor %}
        </tbody>

        <p><a href="/refreshColors">Effacer les couleurs moches</a></p>
        <p><a href="/books/add">Ajouter un nouveau livre</a></p>
    </table>
{% endblock %}
